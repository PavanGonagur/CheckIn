@model CheckIn.Web.Models.Admin.AdminListModel

@{
    ViewBag.Title = "Index";
}
<br/>
<p>
    @Html.ActionLink("Add", "Create", "Admin", null, new {@class = "modal-link btn btn-success"})
</p>
<hr/>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-lg-3">Name</th>
            <th class="col-lg-3">Email</th>
            <th class="col-lg-2">Phone Number</th>
            <th class="col-lg-2">Super Admin</th>
            <th class="col-lg-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Admins)
        {
            <tr>
                <td class="col-lg-3">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="col-lg-3">@Html.DisplayFor(modelItem => item.Email)</td>
                <td class="col-lg-2">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td class="col-lg-2">
                    @if (item.IsSuperAdmin)
                         {
                             <p class="green-icon"><span class="glyphicon glyphicon-ok-sign"></span></p>
                         }
                         else
                         {
                             <p class="red-icon"><span class="glyphicon glyphicon-remove-sign"></span></p>
                         }
                </td>
                <td class="col-lg-2">
                    @Html.ActionLink("Edit", "Edit", "Admin", new { id = item.AdminId }, new { @class = "modal-link btn btn-warning" }) |
                    @Html.ActionLink("Channels", "Channels", "Admin", new { id = item.AdminId }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", "Admin", new { id = item.AdminId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>
