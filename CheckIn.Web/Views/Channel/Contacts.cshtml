@model CheckIn.Web.Models.Channel.ChannelContactListModel

<br/>

<p>
    @Html.ActionLink("Back", "Index", "Channel", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Add", "AddContacts", "Channel", new { id = Model.ChannelId }, new { @class = "modal-link btn btn-success" })
</p>

<hr/>

@Html.HiddenFor(x => x.ChannelId)
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="col-lg-4">Contact Name</th>
                <th class="col-lg-3">Title</th>
                <th class="col-lg-3">Contact Number</th>
                <th class="col-lg-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Contacts)
            {
                <tr>
                    <td class="col-lg-4">@item.ContactName</td>
                    <td class="col-lg-3">@item.Title</td>
                    <td class="col-lg-3">@item.ContactNumber</td>
                    <td class="col-lg-2">@Html.ActionLink("Delete", "DeleteApplication", "Channel", new { id = 1 }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>