@model CheckIn.Web.Models.Channel.ChannelWebClipListModel

<br/>

<p>
    @Html.ActionLink("Back", "Index", "Channel", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Add", "AddWebClips", "Channel", new { id = Model.ChannelId }, new { @class = "modal-link btn btn-success" })
</p>

<hr/>

@Html.HiddenFor(x => x.ChannelId)
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="col-lg-2">Name</th>
                <th class="col-lg-3">URL</th>
                <th class="col-lg-3">Icon URL</th>
                <th class="col-lg-2">Open In Browser</th>
                <th class="col-lg-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WebClips)
            {
                <tr>
                    <td class="col-lg-2">@item.WebClipName</td>
                    <td class="col-lg-3">@item.WebClipUrl</td>
                    <td class="col-lg-3">@item.IconUrl</td>
                    <td class="col-lg-2">
                        @if (item.OpenInBrowser)
                        {
                            <p class="green-icon"><span class="glyphicon glyphicon-ok-sign"></span></p>
                        }
                        else
                        {
                            <p class="red-icon"><span class="glyphicon glyphicon-minus-sign"></span></p>
                        }
                    </td>
                    <td class="col-lg-2">@Html.ActionLink("Delete", "DeleteApplication", "Channel", new { id = item.WebClipId }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>