@model CheckIn.Web.Models.Channel.ChannelBrandingModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Branding</h4>
</div>

<div class="modal-body">
    @using (Html.BeginForm("Branding", "Channel", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ChannelId)
            @Html.HiddenFor(model => model.ChannelBrandingId)

            <div class="form-group">
                @Html.Label("Icon", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <input type="file" id="Icon" name="icon" />
                </div>
            </div>
            <div class="form-group">
                @*@Html.LabelFor(model => model.PrimaryColor, htmlAttributes: new {@class = "control-label col-md-4"})*@
                <label for="PrimaryColor" class = "control-label col-md-4">Primary Color</label>
                <div class="col-md-7">
                    <input type="text" id="PrimaryColor" name="PrimaryColor" class = "form-control" value=@Model.PrimaryColor /> <div id="PrimaryPicker" style="display: none"></div>
                    @Html.ValidationMessageFor(model => model.PrimaryColor, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label for="SecondaryColor" class="control-label col-md-4">Secondary Color</label>
                <div class="col-md-7">
                    <input type="text" id="SecondaryColor" name="SecondaryColor" class="form-control" value=@Model.SecondaryColor /> <div id="SecondaryPicker" style="display: none"></div>
                    @Html.ValidationMessageFor(model => model.SecondaryColor, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="TertiaryColor" class="control-label col-md-4">Tertiary Color</label>
                <div class="col-md-7">
                    <input type="text" id="TertiaryColor" name="TertiaryColor" class="form-control" value=@Model.TertiaryColor /> <div id="TertiaryPicker" style="display: none"></div>
                    @Html.ValidationMessageFor(model => model.TertiaryColor, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="modal-footer">
                @*<div class="col-md-10">*@
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" id="approve-btn" class="btn btn-danger">Save</button>
                @*</div>*@
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
        $('#PrimaryPicker').farbtastic('#PrimaryColor');
        $('#SecondaryPicker').farbtastic('#SecondaryColor');
        $('#TertiaryPicker').farbtastic('#TertiaryColor');
    });
</script>

