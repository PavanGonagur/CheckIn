@using CheckIn.Data
@model CheckIn.Web.Models.Channel.Profile.ProfileViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Profiles</h4>
</div>

<div class="modal-body">
        @Html.HiddenFor(x => x.ChannelId)
            <div class="row">
                <div class="col-md-9">
                    @Html.ActionLink("Configure WiFi", "AddProfile", "Channel", new { id = Model.ChannelId, profileType = ProfileType.WiFi }, new { @class = "modal-link1 btn btn-success" }) 
                </div>
                @*<div class="col-md-9">
                    @Html.TextAreaFor(model => model.UserEmailIds)
                </div>*@
            </div>
        <div class="modal-footer">
            @*<div class="col-md-10">*@
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            @*<button type="submit" id="approve-btn" class="btn btn-danger">Done</button>*@
            @*</div>*@
        </div>
</div>

<script type="text/javascript">
    $(function () {
        $('.approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}